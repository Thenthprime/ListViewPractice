<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Title"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textview_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Type"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textview_numberOfTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Number of Teams"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textview_currentRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Current Record"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textview_currentRecordHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Current Record Holder"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/textview_currentRecordYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Current Record Year"
        android:textSize="18sp"/>
</LinearLayout>